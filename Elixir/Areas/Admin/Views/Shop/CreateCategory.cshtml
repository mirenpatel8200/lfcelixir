@model Elixir.Areas.Admin.ViewModels.CreateShopCategoryViewModel
@{
    ViewBag.Title = "Create Shop Category";
}

@section Styles
{
    @Styles.Render("~/Styles/Components/Controls/Inputs.css")
    @Styles.Render("~/bundles/summernote/css")
}

@section Scripts
{
    @Scripts.Render("~/bundles/summernote/js")
    @Scripts.Render("~/Scripts/App/leaveDirtyForm.js")
}

<h1 class="head-title">Create Shop Category</h1>

@using (Html.BeginForm("CreateCategory", "Shop", FormMethod.Post))
{
    @Html.Partial("_ShopCategoryEditor", Model)
    <br />
    <br />
    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Category", "Shop", null, new { @class = "btn btn-light skipWarnUnsavedChanges" })
        </div>
        <div class="offset-2 col-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}