@model Elixir.Areas.Admin.ViewModels.EditShopCategoryViewModel

@{
    ViewBag.Title = "Edit Shop Category";
}

@section Styles
{
    @Styles.Render("~/Styles/Components/Controls/Inputs.css")
    @Styles.Render("~/bundles/summernote/css")
}

@section Scripts
{
    @Scripts.Render("~/Scripts/App/confirmation.js")
    @Scripts.Render("~/Scripts/App/leaveDirtyForm.js")
    @Scripts.Render("~/bundles/summernote/js")
}

<h1 class="head-title">Edit Shop Category</h1>

@using (@Html.BeginForm("EditCategory", "Shop", FormMethod.Post))
{
    @Html.Partial("_ShopCategoryEditor", Model)

    <br />
    <br />

    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Category", "Shop", null, new { @class = "btn btn-light skipWarnUnsavedChanges" })
        </div>
        <div class="col-2">
            @Html.ActionLink("Delete", "DeleteCategory", "Shop", new { id = Model.Model.ShopCategoryId }, new { @class = "btn btn-danger confirmable-action" })
        </div>
        <div class="col-6">
            <input type="submit" name="method" value="Save" class="btn btn-primary" />
        </div>
    </div>
}