@model Elixir.Areas.Admin.ViewModels.CreateResourceViewModel
@{
    ViewBag.Title = "Create Resource";
}

@section Styles
{
    @Styles.Render("~/Styles/Components/Controls/Inputs.css")
    @Styles.Render("~/bundles/summernote/css")
}

@section Scripts
{
    @Scripts.Render("~/bundles/summernote/js")
    @Scripts.Render("~/Scripts/App/Views/add-edit-resource.js")
    @Scripts.Render("~/Scripts/App/leaveDirtyForm.js")
    @Scripts.Render("~/Scripts/App/Views/tagsControl.js")
}

<h1 class="head-title">Create Resource</h1>

@using (Html.BeginForm("Create", "Resource", FormMethod.Post))
{
    @Html.Partial("_ResourceEditor", Model)
    <br />
    <br />
    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Index", "Resource", null, new { @class = "btn btn-light skipWarnUnsavedChanges" })
        </div>
        <div class="offset-2 col-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

@Html.Hidden("verifyDuplicatesUrl",
    Url.Action("VerifyDuplicates", "Resource"), new { @id = "verifyDuplicatesUrl" })

