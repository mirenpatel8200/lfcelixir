@model Elixir.Areas.AdminManual.ViewModels.EditTopicViewModel
@{
    ViewBag.Title = "Edit Topic";
}

@section Scripts
{
    @Scripts.Render("~/bundles/summernote/js")
    @Scripts.Render("~/Scripts/App/Views/add-edit-topic.js")
}

@section Styles
{
    @Styles.Render("~/Styles/Components/Controls/Inputs.css")
    @Styles.Render("~/bundles/summernote/css")
}
<h1 class="head-title">Edit Topic</h1>

@using (@Html.BeginForm("Edit", "Topic", FormMethod.Post))
{
    @Html.Partial("_TopicEditor", Model)

    <br />
    <br />

    <div class="form-group row">
        <div class="offset-2 col-2">
            <a href="/admin/topic" class="btn btn-light">Cancel</a>
            @*@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })*@
        </div>
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}