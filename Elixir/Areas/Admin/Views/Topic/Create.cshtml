@model Elixir.Areas.Admin.ViewModels.CreateTopicViewModel
@{
    ViewBag.Title = "Create Topic";
}

@section Scripts
{
    @Scripts.Render("~/bundles/summernote/js")
    @Scripts.Render("~/Scripts/App/Views/add-edit-topic.js")
}

@section Styles
{
    @Styles.Render("~/Styles/Components/Controls/Inputs.css")
    @Styles.Render("~/bundles/summernote/css")
}

<h1 class="head-title">Create Topic</h1>

@using (Html.BeginForm("Create", "Topic", FormMethod.Post))
{
    @Html.Partial("_TopicEditor", Model)

    <br />
    <br />

    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-light" })
        </div>
        <div class="col-2">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}