@model Elixir.Areas.Admin.Models.TextOnImageModel
@{
    ViewBag.Title = "Development Sandpit";
}
<h1 class="head-title">Development Sandpit</h1>

<h2>Dynamic image test</h2>
@if (Model.RenderImage == true)
{
    <img src="../Images/social-card-backgrounds/@Model.ImageResultSource" alt="result image" />
}
@using (Html.BeginForm("Save", "Dev", FormMethod.Post))
{
    <div class="form-group row">
        @Html.LabelFor(m => Model.ImageSource, "Image source", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.EditorFor(m => Model.ImageSource, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => Model.Text, "Text", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.EditorFor(m => Model.Text, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => Model.SelectedFont, "Font", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.DropDownListFor(m => Model.SelectedFont, new SelectList(Model.FontsAvailable), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => Model.SelectedSize, "Font Size", new { @class = "col-2 col-form-label" })
        <div class="col-2">
            @Html.EditorFor(m => Model.SelectedSize, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => Model.SelectedColor, "Text Color", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.DropDownListFor(m => Model.SelectedColor, new SelectList(Model.TextColorsAvailable), new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
}
