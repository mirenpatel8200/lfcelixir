@model Elixir.Areas.Admin.Views.Article.EditGoLinkViewModel

@{
    ViewBag.Title = "Edit Go Link";
}

@section Scripts
{
    @Scripts.Render("~/Scripts/App/confirmation.js")
}

<h1 class="head-title">@ViewBag.Title</h1>

@using (Html.BeginForm())
{
    @Html.Partial("_GoLinkEditor", Model)

    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-light" })
        </div>
        <div class="col-2">
            @Html.ActionLink("Delete", "Delete", "GoLink", new { id = Model.Model.Id }, new { @class = "btn btn-danger confirmable-action" })
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>
}