@model Elixir.Areas.Admin.Views.Article.CreateGoLinkViewModel

@{
    ViewBag.Title = "Add Go Link";
}

<h1 class="head-title">@ViewBag.Title</h1>

@using (Html.BeginForm())
{
    @Html.Partial("_GoLinkEditor", Model)

    <div class="form-group row">
        <div class="offset-2 col-4">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-light" })
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-success" value="Create"/>
        </div>
    </div>
}