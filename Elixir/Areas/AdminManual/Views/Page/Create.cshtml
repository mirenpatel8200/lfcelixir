@model Elixir.Areas.AdminManual.ViewModels.CreatePageViewModel
@{
    ViewBag.Title = "Create Page";
}


<h1 class="head-title">Create Page</h1>

@using (Html.BeginForm("Create", "Page", FormMethod.Post))
{
    @Html.Partial("_PageEditor", Model)

    <br />
    <br />

    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-light" })
        </div>
        <div class="col-2">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}