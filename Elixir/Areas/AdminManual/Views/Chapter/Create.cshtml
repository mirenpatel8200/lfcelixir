@model Elixir.Areas.AdminManual.ViewModels.CreateChapterViewModel
@{
    ViewBag.Title = "Create Chapter";
}

@section Styles
{
    @Styles.Render("~/Styles/Components/datagrid.css")
}

@section Scripts
{
    @Scripts.Render("~/Scripts/App/tooltip.js")
}

<h1 class="head-title">Create Chapter</h1>

@using (Html.BeginForm("Create", "Chapter", FormMethod.Post))
{
    @Html.Partial("_ChaptersEditor", Model)

    <br />
    <br />

    <div class="form-group row">
        <div class="offset-2 col-2">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-light" })
        </div>
        <div class="col-2">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
}
