@model List<Elixir.Models.Resource>

@if (Model.Count > 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        @* Oct20: AC: I don't see any difference between odd and even layout - classes are the same - remove modulo check *@
        @*if (i % 2 == 0)
