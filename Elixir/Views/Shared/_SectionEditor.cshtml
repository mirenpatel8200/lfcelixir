@model Elixir.Areas.AdminManual.Models.BookSectionModel

@Html.ValidationSummary(true)

<div class="form-group row">
    @Html.LabelFor(x => x.Id, "ID", new { @class = "col-form-label col-2" })
    <div class="col-2">
        @Html.EditorFor(x => x.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(x => x.BookSectionName, "Name *", new { @class = "col-form-label col-2" })
    <div class="col-10 editor-field">
        @Html.EditorFor(x => x.BookSectionName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.BookSectionName)
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(x => x.DisplayOrder, "Order", new { @class = "col-form-label col-2" })
    <div class="col-2 editor-field">
        @Html.EditorFor(x => x.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.DisplayOrder)
    </div>
</div>

<div class="form-group row">
    @Html.LabelFor(x => x.IsIncluded, "Is Included", new { @class = "col-form-label col-2" })
    <div class="col-10 form-checkbox">
        @Html.EditorFor(x => x.IsIncluded)
    </div>
</div>