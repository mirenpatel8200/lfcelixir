@using System.Globalization;
@model List<Elixir.Models.BlogPost>

@if (Model.Count > 0)
{
<div class="recent-articles-container">
    @for (int i = 0; i < Model.Count; i++)
    {
        var blog = Model[i];
        <div class="latest-article">
            <h3><a href="/blog/@blog.UrlName">@blog.BlogPostTitle</a></h3>

            @if (blog.PublishedUpdatedDT.HasValue)
            {
                <p>@blog.PublishedUpdatedDT.Value.ToString("dd-MMM-yyyy", CultureInfo.InvariantCulture) @blog.BlogPostDescriptionPublic</p>
            }
            else
            {
                <p>@blog.BlogPostDescriptionPublic</p>
            }
        </div>
    }
</div>
}
else
{
    <p>Sorry, no blog posts found.</p>
}