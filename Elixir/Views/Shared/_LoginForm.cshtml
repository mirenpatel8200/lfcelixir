@model Elixir.Models.Login

@using (Html.BeginForm("Login", "WebPageVisual", FormMethod.Post, new { @id = "frmLogin" }))
{
    if (TempData["ErrorMsgLogin"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMsgLogin"].ToString()
        </div>
    }
    <div class="form-group row">
        <div class="col-6">
            @Html.LabelFor(x => x.EmailAddress, "Email address", new { @class = "col-form-label" })
            @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control", @id = "txtEmailAddress", @autofocus = "" } })
            <span id="spEmailAddress" class="field-validation-error" for="txtEmailAddress"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            @Html.LabelFor(x => x.Password, "Password", new { @class = "col-form-label" })
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", @id = "txtPassword" } })
            <span id="spPassword" class="field-validation-error" for="txtPassword"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <button type="button" id="btnSave" class="btn btn-primary">
                Login
            </button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <a href="/auth/forgotten">Forgot your password?</a>
        </div>
    </div>
}
