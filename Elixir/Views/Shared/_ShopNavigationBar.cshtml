@model Elixir.Models.ShopNavigationBar

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <a href="/shop/home">Products</a>
            </div>
            <div class="col-6">
                <span class="float-right">
                    <a href=@(Model.IsOnlyMembershipProducts? "/shop/checkout":"/shop/cart")><img src="~/Images/icons/shopping-cart-32.png" /> @Model.TotalQuantity @(Model.TotalQuantity > 1? "items":"item") £ @Model.TotalAmount </a>
                </span>
            </div>
        </div>
    </div>
</div>
