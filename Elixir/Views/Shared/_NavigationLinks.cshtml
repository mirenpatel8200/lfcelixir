@model int
@* int = page number. -1 if out of range *@
@{
    int PageNumber = (Model);
    string prevUrl = "";
    if ((PageNumber > 0) && (PageNumber <= 172)) // page 172 = back cover
    {
        prevUrl = (PageNumber - 1).ToString();
    } // else leave blank and link is disabled
    string nextUrl = "";
    if ((PageNumber >= 0) && (PageNumber < 172)) // page 172 = back cover
    {
        nextUrl = (PageNumber + 1).ToString();
    } // else leave blank and link is disabled
}
