<section class="section-pb">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            @*<a class="page-link prev" href="#"><i class="fas fa-chevron-left"></i> Previous</a>*@
                            <a href="@prevUrl" class="@(string.IsNullOrEmpty(prevUrl) ? "disabled" : "page-link prev")"><i class="fas fa-chevron-left"></i> Previous</a>
                        </li>
                        <li class="page-item">
                            @*<a class="page-link" href="#">Contents</a>*@
                            <a href="/manual/2018/5" class="page-link">Contents</a>
                        </li>
                        <li class="page-item">
                            @*<a class="page-link next" href="#">Next <i class="fas fa-chevron-right"></i></a>*@
                            <a href="@nextUrl" class="@(string.IsNullOrEmpty(nextUrl) ? "disabled" : "page-link next")">Next <i class="fas fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
