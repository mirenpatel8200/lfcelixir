@model List<Elixir.Models.Resource>

@if (Model.Count > 0)
{
    for (int i = 0; i < Model.Count; i++)
    {
        <p>
            <a href="@Model[i].UrlName">@Model[i].ResourceName</a>
            @if (!string.IsNullOrEmpty(Model[i].ResourceDescriptionPublic))
            {
                string desc = " - " + Model[i].ResourceDescriptionPublic;
                @desc
            }
        </p>

    }
}
