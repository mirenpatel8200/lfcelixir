@if (Model.MentionedResources != null && Model.MentionedResources.Count() > 0)
{
    <div class="mentionedResources">
        <h3>Mentioned in this blog post:</h3>
        <div class="row">
            @Html.Partial("_ResourcesListForSubjectPage", Model.MentionedResources)
        </div>
    </div>
}


<div class="row mt-5">

    @if (Model.PrimaryWebPageExists)
    {
        <div class="col-md-6">
            <div class="article-link bg-grey p-2">
                <h6 style="margin-top:0px;">More @Html.ActionLink($"{Model.PrimaryWebPageName} information, news and resources", "Index", "WebPageVisual", new { name = Model.PrimaryWebPageUrlName, area = "" }, null)</h6>
            </div>
        </div>
    }

    @if (Model.SecondaryWebPageExists && Model.TopicsHaveSamePrimaryWebPage != true)
    {
        <div class="col-md-6">
            <div class="article-link bg-grey p-2">
                <h6 style="margin-top:0px;">More @Html.ActionLink($"{Model.SecondaryWebPageName} information, news and resources", "Index", "WebPageVisual", new { name = Model.SecondaryWebPageUrlName, area = "" }, null)</h6>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-6">
        @if (Model.HasPreviousPage)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item" style="margin:0;"><a class="page-link prev" href="@Url.Action("ViewBlog", new {name = Model.PreviousUrlName, area = ""})"><i class="fas fa-chevron-left"></i> Previous</a></li>
                </ul>
            </nav>
            <p>@Model.PreviousBlogPostTitle</p>

        }
        </div>
    
    <div class="col-md-6">
        @if (Model.HasNextPage)
        {
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item" style="margin:0;"><a class="page-link next" href="@Url.Action("ViewBlog", new {name = Model.NextUrlName, area = ""})">Next <i class="fas fa-chevron-right"></i></a></li>
                </ul>
            </nav>
            <p>@Model.NextBlogPostTitle</p>
        }
    </div>
</div>

<div>
    @if (Model.RelatedBlogPosts != null && Model.RelatedBlogPosts.Count > 0)
    {
        <h3>Related Blog Posts</h3>

        @Html.Partial("_BlogPostSummaries", Model.RelatedBlogPosts)
    }

</div>


