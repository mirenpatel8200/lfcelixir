
@model Elixir.ViewModels.Blogs.BlogPostViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

@section Styles
{
    @Styles.Render("~/Styles/Pages/Blog.css")
}

<h1>@Model.Title</h1>

<div class="row">
    <div class="col-12 blog-post-date">
        @Model.PublishedUpdatedInfo
    </div>
</div>

<div class="row">
    <div class="col-12 blog-post-date">

        Up to > <a href="/page/home">Home</a> > <a href="/blog">Blog</a> > <a href="/blog/year/@Model.PublicUpdatedOn.Value.Year">@Model.PublicUpdatedOn.Value.Year</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        @Html.Raw(Model.HtmlContent)
    </div>
</div>
