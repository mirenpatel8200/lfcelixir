@model Elixir.Models.Login

@{
    ViewBag.Title = "Login";
}

@section Scripts {
    @Scripts.Render("~/Scripts/App/Views/webpage.js")
}

<h1 class="head-title">Live Forever Club</h1>
<p>Member login coming soon! Member only access will include online access to the Live Forever Manual as well as archived news.</p>

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
    @*@Html.HiddenFor(x => x.ReturlUrl)*@

    <div class="form-group row">
        @Html.LabelFor(x => x.EmailAddress, "Email", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.EditorFor(x => x.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.EmailAddress)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Password, "Password", new { @class = "col-2 col-form-label" })
        <div class="col-10">
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            @Html.ValidationSummary(true)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2 offset-2">
            <input type="submit" value="Login" class="btn btn-success" />
        </div>
    </div>
}